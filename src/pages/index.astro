---
import Navbar from "../components/Navbar.astro"

// Server Only
const name = 'William Mosquera'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro ~ WjmmK.</title>
	</head>
	<body>
	    <Navbar />

		<h1>{name}.</h1>

		<p>Momento actual: {new Date().toLocaleTimeString()}</p>
		<p id="current-time">Momento actual real: {new Date().toLocaleTimeString()}</p>

		<footer>Año: {new Date().getFullYear()}</footer>

		<script>
			const currentYear = new Date().getFullYear();
			const footer = document.querySelector('footer') as HTMLElement;
			const currentTimeParagraph = document.querySelector('#current-time') as HTMLParagraphElement;
			currentTimeParagraph.innerText = `Momento actual real: ${new Date().toLocaleTimeString()}`;
			footer.innerText = `Año: ${currentYear}`;
		</script>
	</body>
</html>
